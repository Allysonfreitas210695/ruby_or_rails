<%= form_with(model: coin, local: true) do |form| %>
  <% if coin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
      <% coin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_field :description, class:"form-control", placeholder:t('placeholder.coin.description')%>
  </div>

  <div class="mb-3">
    <%= form.label :acronym %>
    <%= form.text_field :acronym, class:"form-control", placeholder:t('placeholder.coin.acronym') %>
  </div>

  <div class="mb-3">
    <%= form.label :url_image %>
    <%= form.text_field :url_image, class:"form-control", placeholder:'https://upload.wikimedia.org/wikipedia/commons/thumb/b/b7/ETHEREUM-YOUTUBE-PROFILE-PIC.png/600px-ETHEREUM-YOUTUBE-PROFILE-PIC.png '%>
    <%# image_tag coin.url_image, width: 25, height: 25%> 
  </div>

  <div class="mb-3">
  <%= form.label :mining_type %>
  <%= form.select("mining_type_id", @mining_type_options, {include_blank: 'Selecione...'}) %>
  </div>

  <div class="mb-4">
    <%= form.submit %>
  </div>
<% end %>
