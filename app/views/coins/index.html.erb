<p id="notice"><%= notice %></p>

<h1><%= Coin.model_name.human(count: Coin.count) %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th> <%= @coins.human_attribute_name(:description)%> </th>
      <th> <%= @coins.human_attribute_name(:acronym)%> </th>
      <th> <%= @coins.human_attribute_name(:url_image)%> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td class="table-primary"><%= coin.description %></td>
        <td class="table-secondary"><%= coin.acronym %></td>
        <td class="table-success"><%= image_tag coin.url_image,width:25, height:25 %></td>
        <td class="table-danger"><%= link_to t('links.show'), coin %></td>
        <td class="table-warning"><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td class="table-info"><%= link_to t('links.destroy'), coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br>

<%= link_to t('add_coin'), new_coin_path, class: 'btn btn-primary', role: 'button' %>
<%= link_to 'Home', welcome_index_path, class: 'btn btn-primary', role: 'button' %>